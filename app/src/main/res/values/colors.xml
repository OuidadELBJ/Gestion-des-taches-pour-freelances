<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Palette principale BLEU + ORANGE (tu peux ajuster les codes hex si tu veux) -->
    <color name="color_primary">#1854E6</color>            <!-- bleu principal -->
    <color name="color_on_primary">#FFFFFFFF</color>       <!-- texte sur le bleu -->

    <color name="color_primary_container">#E3EBFF</color>  <!-- bleu très clair (cards, badges) -->
    <color name="color_on_primary_container">#102347</color>

    <color name="color_secondary">#FF9800</color>          <!-- orange accent -->
    <color name="color_on_secondary">#FFFFFFFF</color>
    <color name="color_warning_orange">#FFA24A</color>
    <color name="color_done_green">#2ECC71</color>

    <!-- Surfaces / fonds -->
    <color name="color_background">#F5F7FF</color>         <!-- fond global de l’app -->
    <color name="color_surface">#FFFFFFFF</color>          <!-- cartes / feuilles blanches -->
    <color name="color_on_surface">#1F2430</color>         <!-- texte principal sur surface -->
    <!-- Alias utilisés dans tes layouts -->
    <color name="appBackground">@color/color_background</color>
    <color name="cardBackground">@color/color_primary_container</color>

    <color name="textPrimary">@color/color_on_surface</color>
    <color name="textSecondary">#7A8194</color>

    <!-- Accent orange qu’on utilisait sur le Dashboard -->
    <color name="primaryOrange">@color/color_secondary</color>

    <!-- Bottom navigation -->
    <color name="navBackground">#EEF0FF</color>

    <color name="bottom_nav_icon_selected">@color/color_primary</color>
    <color name="bottom_nav_icon_unselected">#9AA1B8</color>

    <color name="bottom_nav_text_selected">@color/color_primary</color>
    <color name="bottom_nav_text_unselected">#9AA1B8</color>

</resources>