<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FB"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ===== HEADER BLEU ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2F5BFF"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp">

            <!-- Toolbar simple -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btnBackProfile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:src="@android:drawable/ic_media_previous"
                    android:tint="@android:color/white"
                    android:contentDescription="Back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Profil"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@android:color/white" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- Carte identité -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#234BFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp"
                    android:gravity="center_vertical">

                    <!-- Avatar rond SANS style overlay -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageProfileAvatar"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@drawable/ic_person"
                        android:contentDescription="Avatar"
                        android:padding="10dp"
                        android:background="#2F5BFF"
                        android:tint="@android:color/white"
                        app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.SmallComponent"
                        app:strokeWidth="0dp" />

                    <!-- IMPORTANT: on rend vraiment l’image ronde -->
                    <!-- Astuce : ShapeableImageView devient ronde si on met un "shapeAppearance" arrondi
                         -> SmallComponent suffit souvent, sinon utilise un style custom.
                    -->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textProfileName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ouidad Elbojaddaini"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/textProfileRole"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Freelancer • Mobile &amp; Web"
                            android:textSize="12sp"
                            android:textColor="#D7E2FF" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonEditProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Modifier"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#2F5BFF"
                        app:cornerRadius="18dp"
                        app:backgroundTint="@android:color/white" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- ===== CONTENU BLANC ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Section Paramètres -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paramètres"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#1F2A44" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="6dp">

                    <!-- Row Compte -->
                    <LinearLayout
                        android:id="@+id/rowAccount"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_manage"
                            android:tint="#2F5BFF" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:text="Compte"
                            android:textSize="14sp"
                            android:textColor="#1F2A44" />

                        <!-- ✅ utiliser ton drawable, PAS android: -->
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/arrow_forward"
                            android:tint="#7B86A8" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEF1F8" />

                    <!-- Row Notifications -->
                    <LinearLayout
                        android:id="@+id/rowNotifications"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_dialog_email"
                            android:tint="#2F5BFF" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:text="Notifications"
                            android:textSize="14sp"
                            android:textColor="#1F2A44" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/arrow_forward"
                            android:tint="#7B86A8" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEF1F8" />

                    <!-- Row Help -->
                    <LinearLayout
                        android:id="@+id/rowHelp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_help"
                            android:tint="#2F5BFF" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:text="Aide &amp; support"
                            android:textSize="14sp"
                            android:textColor="#1F2A44" />

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/arrow_forward"
                            android:tint="#7B86A8" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Déconnexion -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonLogout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:text="Se déconnecter"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                app:cornerRadius="18dp"
                app:backgroundTint="#FF7A00" />

        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>