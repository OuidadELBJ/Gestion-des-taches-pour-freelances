<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootProjectDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FB">

    <!-- APP BAR -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarProjectDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarProjectDetail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:title="Détail projet"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/ic_back"
            app:navigationIconTint="@android:color/white"
            app:titleCentered="false"
            app:popupTheme="@style/ThemeOverlay.Material3.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- CONTENU SCROLL -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollProjectDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="96dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/containerProjectDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HEADER CARD -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProjectHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E6EAF2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Ligne 1: Nom + badge -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/textProjectTitleHeader"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Site web client A"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#1E1E1E"
                            android:maxLines="2"
                            android:ellipsize="end" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/textStatusBadgeHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="En cours"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            app:chipCornerRadius="999dp"
                            app:chipBackgroundColor="?attr/colorPrimary"
                            app:chipMinHeight="28dp"
                            app:ensureMinTouchTargetSize="false"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp" />
                    </LinearLayout>

                    <!-- Ligne 2: Client + deadline -->
                    <TextView
                        android:id="@+id/textProjectClientHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Client A"
                        android:textColor="#6B7280"
                        android:textSize="13sp"
                        android:layout_marginTop="6dp" />

                    <TextView
                        android:id="@+id/textDeadlineHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deadline : 15/01/2026"
                        android:textColor="#6B7280"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />

                    <!-- Ligne 3: Prévu / Payé / Restant -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Prévu"
                                android:textSize="12sp"
                                android:textColor="#6B7280" />

                            <TextView
                                android:id="@+id/textAmountPlanned"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 500 €"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#1E1E1E" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payé"
                                android:textSize="12sp"
                                android:textColor="#6B7280" />

                            <TextView
                                android:id="@+id/textAmountPaid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="800 €"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#1E1E1E" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Restant"
                                android:textSize="12sp"
                                android:textColor="#6B7280" />

                            <TextView
                                android:id="@+id/textAmountRemaining"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="700 €"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#1E1E1E" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Ligne 4: Temps + taux -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/textTimeTotal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Temps total : 12h30"
                            android:textColor="#6B7280"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/textHourlyRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Taux horaire : 60 €/h"
                            android:textColor="#6B7280"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <!-- Progress bar + % -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp">

                        <ProgressBar
                            android:id="@+id/progressGlobal"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="40" />

                        <TextView
                            android:id="@+id/textProgressGlobal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="40%"
                            android:textColor="#6B7280"
                            android:textSize="12sp"
                            android:layout_marginStart="10dp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ACTIONS RAPIDES -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:weightSum="3">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardActionAddTask"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:backgroundTint="@android:color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E6EAF2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ajouter tâche"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:textColor="#1E1E1E"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardActionStartTimer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:backgroundTint="@android:color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E6EAF2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Démarrer timer"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:textColor="#1E1E1E"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardActionAddPayment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:backgroundTint="@android:color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E6EAF2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ajouter paiement"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:textColor="#1E1E1E"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- TABS -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayoutProject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@android:color/transparent"
                app:tabIndicatorColor="?attr/colorPrimary"
                app:tabSelectedTextColor="?attr/colorPrimary"
                app:tabTextColor="#6B7280" />

            <!-- CONTENU: TÂCHES -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false" />

            <!-- CONTENU: TEMPS -->
            <LinearLayout
                android:id="@+id/layoutTimeTab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:visibility="gone">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E6EAF2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Résumé temps"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#1E1E1E" />

                        <TextView
                            android:id="@+id/tvProjectTimeSummary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tâche: 00:00:00 • Projet: 00:00:00"
                            android:textSize="13sp"
                            android:textColor="#6B7280"
                            android:layout_marginTop="6dp" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardOpenTimerFromProject"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:backgroundTint="?attr/colorPrimary"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="48dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ouvrir Timer"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/white" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sessions de temps (TODO)"
                            android:textSize="13sp"
                            android:textColor="#6B7280"
                            android:layout_marginTop="12dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- CONTENU: PAIEMENTS -->
            <LinearLayout
                android:id="@+id/layoutPaymentsTab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:visibility="gone">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E6EAF2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Résumé paiements"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#1E1E1E" />

                        <TextView
                            android:id="@+id/tvPaymentsExpected"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Attendu : 0 €"
                            android:textSize="13sp"
                            android:textColor="#6B7280"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/tvPaymentsReceived"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Reçu : 0 €"
                            android:textSize="13sp"
                            android:textColor="#6B7280"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/tvPaymentsRemaining"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Restant : 0 €"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:textColor="#1E1E1E"
                            android:layout_marginTop="4dp" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardOpenPaymentsFromProject"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:backgroundTint="?attr/colorPrimary"
                            app:cardCornerRadius="14dp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="48dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingStart="14dp"
                                android:paddingEnd="14dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ouvrir Paiements"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/white" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- CONTENU: NOTES (finalisé) -->
            <LinearLayout
                android:id="@+id/layoutNotesTab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:visibility="gone">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E6EAF2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notes du projet"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#1E1E1E" />

                        <!-- Petit état vide (affiché par Java si besoin) -->
                        <TextView
                            android:id="@+id/tvNotesPlaceholder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Aucune note pour le moment."
                            android:textColor="#6B7280"
                            android:textSize="13sp"
                            android:layout_marginTop="8dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="Écrire une note…"
                            app:boxBackgroundMode="outline"
                            app:boxCornerRadiusTopStart="14dp"
                            app:boxCornerRadiusTopEnd="14dp"
                            app:boxCornerRadiusBottomStart="14dp"
                            app:boxCornerRadiusBottomEnd="14dp"
                            app:boxStrokeColor="#D7DCE6">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etProjectNotes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minLines="4"
                                android:gravity="top|start"
                                android:inputType="textMultiLine"
                                android:textColor="#1E1E1E"
                                android:textSize="14sp"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSaveNotes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:minHeight="48dp"
                            android:text="Enregistrer"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:backgroundTint="?attr/colorPrimary"
                            app:cornerRadius="14dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>