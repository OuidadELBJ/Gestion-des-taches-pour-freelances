<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FB">

    <!-- ======= TOP BAR BLEUE (ZONE 1) ======= -->
    <LinearLayout
        android:id="@+id/topBarProjects"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="18dp"
        android:paddingBottom="14dp"
        android:background="#2F5BFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Ligne Titre + actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textTitleProjects"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Projets"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#FFFFFF" />


            <!-- Icône filtres -->
            <ImageButton
                android:id="@+id/buttonFilterProjects"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:tint="#FFFFFF"
                android:contentDescription="Filtrer" />
        </LinearLayout>

        <!-- Petit texte (optionnel) -->
        <TextView
            android:id="@+id/textHintTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Organisez vos projets et suivez votre progression"
            android:textSize="16sp"
            android:textColor="#D6E2FF" />
    </LinearLayout>


    <!-- ======= SURFACE BLANCHE ARRONDIE (ZONE 2) ======= -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSurfaceProjects"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/topBarProjects"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Badge sous-titre (plus clair et plus "pro") -->
            <TextView
                android:id="@+id/textSubtitleProjects"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="Vos projets en cours"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2F5BFF"
                android:background="#EEF3FF"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Barre de recherche -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="#F6F8FE"
                app:strokeWidth="1dp"
                app:strokeColor="#E3E8F6"
                app:layout_constraintTop_toBottomOf="@id/textSubtitleProjects"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@android:drawable/ic_menu_search"
                        android:tint="#7B86A8"
                        android:contentDescription="Search icon" />

                    <EditText
                        android:id="@+id/editSearchProjects"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:hint="Rechercher un client / projet…"
                        android:background="@android:color/transparent"
                        android:singleLine="true"
                        android:textColor="#1F2A44"
                        android:textColorHint="#7B86A8"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Filtres -->
            <HorizontalScrollView
                android:id="@+id/scrollFilters"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@id/cardSearch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:id="@+id/layoutFilterChips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/chipFilterAll"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="10dp"
                        android:text="Tous"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:backgroundTint="#2F5BFF"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="18dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/chipFilterInProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="10dp"
                        android:text="En cours"
                        android:textAllCaps="false"
                        android:textSize="13sp"
                        android:backgroundTint="#F2F5FF"
                        android:textColor="#56607A"
                        app:cornerRadius="18dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/chipFilterLate"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="10dp"
                        android:text="En retard"
                        android:textAllCaps="false"
                        android:textSize="13sp"
                        android:backgroundTint="#F2F5FF"
                        android:textColor="#56607A"
                        app:cornerRadius="18dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/chipFilterDone"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Terminés"
                        android:textAllCaps="false"
                        android:textSize="13sp"
                        android:backgroundTint="#F2F5FF"
                        android:textColor="#56607A"
                        app:cornerRadius="18dp" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Petite ligne séparatrice fine (propre) -->
            <View
                android:id="@+id/viewDivider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="#E8ECF7"
                app:layout_constraintTop_toBottomOf="@id/scrollFilters"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Liste projets -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerProjects"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="110dp"
                app:layout_constraintTop_toBottomOf="@id/viewDivider"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- FAB -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabAddProject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:contentDescription="Ajouter projet"
                app:srcCompat="@drawable/ic_add"
                app:tint="#FFFFFF"
                app:backgroundTint="#2F5BFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>