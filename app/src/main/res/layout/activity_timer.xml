<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FB">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarTimer"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#2F5BFF"
        app:titleTextColor="#FFFFFF"
        app:navigationIconTint="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="Timer"
        app:navigationIcon="@drawable/ic_back"/>

    <!-- Page content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbarTimer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ====== Timer card ====== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="1dp"
                app:strokeColor="#E3E8F6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvHeaderProjectName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nom du projet"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#1F2A44"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Temps en cours"
                        android:textSize="12sp"
                        android:textColor="#7B86A8"/>

                    <TextView
                        android:id="@+id/tvTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="00:00:00"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:textColor="#B0B7C9"/>

                    <!-- Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnStart"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Démarrer"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#2F5BFF"
                            app:cornerRadius="14dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPause"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Pause"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#2F5BFF"
                            android:backgroundTint="#FFFFFF"
                            app:strokeWidth="1dp"
                            app:strokeColor="#2F5BFF"
                            app:cornerRadius="14dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnStop"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Stop"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#D94141"
                            android:backgroundTint="#FDECEC"
                            app:cornerRadius="14dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ====== Selector card (Projet + Tâche) ====== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="1dp"
                app:strokeColor="#E3E8F6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Projet -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Projet"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#2F5BFF"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <Spinner
                            android:id="@+id/spinnerProjects"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"/>

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@android:drawable/arrow_down_float"
                            android:tint="#7B86A8"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Projet actif"
                        android:textSize="12sp"
                        android:textColor="#7B86A8"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="#E8ECF7"/>

                    <!-- Tâche -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tâche"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#2F5BFF"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <Spinner
                            android:id="@+id/spinnerTasks"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"/>

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@android:drawable/arrow_down_float"
                            android:tint="#7B86A8"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Tâche active"
                        android:textSize="12sp"
                        android:textColor="#7B86A8"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ====== Summary ====== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="1dp"
                app:strokeColor="#E3E8F6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Résumé temps"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#1F2A44"/>

                    <TextView
                        android:id="@+id/tvTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Tâche : 00:00:00 • Projet : 00:00:00"
                        android:textSize="13sp"
                        android:textColor="#56607A"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ====== Sessions ====== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Sessions récentes"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#1F2A44"/>

            <TextView
                android:id="@+id/tvEmptySessions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Aucune session enregistrée pour cette tâche"
                android:textSize="13sp"
                android:textColor="#7B86A8"
                android:visibility="gone"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSessions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clipToPadding="false"
                android:paddingBottom="16dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>