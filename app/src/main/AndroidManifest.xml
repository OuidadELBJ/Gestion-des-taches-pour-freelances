<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.freelance">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <uses-permission
        android:name="android.permission.POST_NOTIFICATIONS"
        tools:targetApi="33" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Freelance"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AccountActivity" android:exported="false" />
        <!-- Et ton écran NotificationsSettingsActivity (si ce n’est pas déjà fait) -->

        <activity android:name=".HelpActivity" android:exported="false" />
        <activity android:name=".FaqActivity" android:exported="false" />
        <activity android:name="ui.settings.NotificationsSettingsActivity" android:exported="false" />

        <activity
            android:name=".AddProjectActivity"
            android:exported="false" />

        <activity
            android:name="ui.payments.AddPaymentActivity"
            android:exported="false" />

        <service
            android:name="service.TimerForegroundService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

    </application>

</manifest>