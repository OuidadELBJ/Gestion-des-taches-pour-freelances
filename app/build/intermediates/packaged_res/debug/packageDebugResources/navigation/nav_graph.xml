<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <!-- Dashboard -->
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.freelance.DashboardFragment"
        android:label="Dashboard">

        <action
            android:id="@+id/action_dashboardFragment_to_profileFragment"
            app:destination="@id/profileFragment" />

        <action
            android:id="@+id/action_dashboardFragment_to_projectListFragment"
            app:destination="@id/projectListFragment" />

        <action
            android:id="@+id/action_dashboardFragment_to_paymentsFragment"
            app:destination="@id/paymentsFragment" />

        <!-- (optionnel) si tu navigues vers timer depuis dashboard -->
        <action
            android:id="@+id/action_dashboardFragment_to_timerFragment"
            app:destination="@id/timerFragment" />
    </fragment>

    <!-- Profil -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.freelance.ProfileFragment"
        android:label="Profil" />

    <!-- Liste des projets -->
    <fragment
        android:id="@+id/projectListFragment"
        android:name="com.example.freelance.ProjectListFragment"
        android:label="Projets">

        <action
            android:id="@+id/action_projectListFragment_to_projectDetailFragment"
            app:destination="@id/projectDetailFragment" />
    </fragment>

    <!-- Détail projet -->
    <fragment
        android:id="@+id/projectDetailFragment"
        android:name="com.example.freelance.ProjectDetailFragment"
        android:label="Détail projet">

        <argument
            android:name="projectId"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="projectName"
            app:argType="string"
            android:defaultValue="" />

        <action
            android:id="@+id/action_projectDetailFragment_to_taskDetailFragment"
            app:destination="@id/taskDetailFragment" />

        <action
            android:id="@+id/action_projectDetailFragment_to_addTaskFragment"
            app:destination="@id/addTaskFragment" />

        <action
            android:id="@+id/action_projectDetailFragment_to_timerFragment"
            app:destination="@id/timerFragment" />

        <action
            android:id="@+id/action_projectDetailFragment_to_paymentsFragment"
            app:destination="@id/paymentsFragment" />
    </fragment>

    <!-- Ajouter tâche -->
    <fragment
        android:id="@+id/addTaskFragment"
        android:name="com.example.freelance.AddTaskFragment"
        android:label="Ajouter tâche">

        <argument
            android:name="projectId"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="projectName"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

    <!-- Détail tâche -->
    <fragment
        android:id="@+id/taskDetailFragment"
        android:name="com.example.freelance.TaskDetailFragment"
        android:label="Détail tâche">

        <argument
            android:name="taskId"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="projectId"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

    <!-- Timer -->
    <fragment
        android:id="@+id/timerFragment"
        android:name="com.example.freelance.TimerFragment"
        android:label="Timer">

        <argument
            android:name="projectId"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="taskId"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="projectName"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

    <!-- Paiements -->
    <fragment
        android:id="@+id/paymentsFragment"
        android:name="com.example.freelance.PaymentsFragment"
        android:label="Paiements">

        <argument
            android:name="projectId"
            app:argType="string"
            android:defaultValue="" />

        <argument
            android:name="projectName"
            app:argType="string"
            android:defaultValue="" />
    </fragment>

</navigation>